<script is:inline>
  document.addEventListener('DOMContentLoaded', function () {
    function toggleLevel(button) {
      const levelItem = button.closest('.level-item')
      const content = levelItem.querySelector('.level-content')
      const chevron = button.querySelector('.chevron')
      const isOpen =
        content.style.maxHeight && content.style.maxHeight !== '0px'

      // Cerrar todos los otros niveles
      document.querySelectorAll('.level-item').forEach((item) => {
        if (item !== levelItem) {
          const otherContent = item.querySelector('.level-content')
          const otherChevron = item.querySelector('.chevron')
          otherContent.style.maxHeight = '0px'
          otherChevron.style.transform = 'rotate(0deg)'
        }
      })

      // Toggle el nivel actual
      if (isOpen) {
        content.style.maxHeight = '0px'
        chevron.style.transform = 'rotate(0deg)'
      } else {
        content.style.maxHeight = content.scrollHeight + 'px'
        chevron.style.transform = 'rotate(180deg)'
      }
    }

    // Agregar event listeners a todos los botones
    document.querySelectorAll('.level-header').forEach((button) => {
      button.addEventListener('click', function () {
        toggleLevel(this)
      })
    })
  })
</script>

