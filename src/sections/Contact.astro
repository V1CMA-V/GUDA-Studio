---
import Facebook from '@/components/icons/Facebook.astro'
import Instagram from '@/components/icons/Instagram.astro'
import Whatsapp from '@/components/icons/Whatsapp.astro'
---

<section
  id="contact"
  class="w-full px-14 h-dvh flex flex-col gap-10 items-center justify-center"
>
  <h3 class="text-5xl font-semibold text-pretty">Contactanos</h3>
  <p class="text-pretty text-secondary text-center">
    Si tienes alguna pregunta o inquietud, no dudes en contactarnos.
  </p>
  <div
    class="flex flex-col md:flex-row gap-20 md:gap-10 items-center justify-between w-full max-w-4xl mt-8"
  >
    <a
      class="hover:scale-110 transition-transform duration-300"
      href="https://instagram.com/tu_perfil"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Instagram class="w-20 h-20 md:w-40 md:h-40 text-red-500" />
    </a>
    <a
      class="hover:scale-110 transition-transform duration-300"
      href="https://wa.me/1234567890"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Whatsapp class="w-20 h-20 md:w-40 md:h-40 text-primary" />
    </a>

    <a
      class="hover:scale-110 transition-transform duration-300"
      href="https://facebook.com/tu_perfil"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Facebook class="w-20 h-20 md:w-40 md:h-40 text-blue-700" />
    </a>
  </div>
</section>

<script>
  import gsap from 'gsap'
  import ScrollTrigger from 'gsap/ScrollTrigger'
  gsap.registerPlugin(ScrollTrigger)

  const tl = gsap.timeline({
    scrollTrigger: {
      trigger: '#contact',
      start: 'top center',
      end: 'center center',
      scrub: true,
    },
  })

  tl.from('#contact h3', {
    y: 50,
    opacity: 0,
    duration: 1,
  })
    .from(
      '#contact p',
      {
        y: 50,
        opacity: 0,
        duration: 1,
      },
      '-=0.5'
    )
    .from(
      '#contact a',
      {
        y: 50,
        opacity: 0,
        stagger: 0.2,
        duration: 1,
      },
      '-=0.5'
    )
</script>
