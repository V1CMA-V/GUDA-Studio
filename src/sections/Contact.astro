---
import EmailIcon from '@/components/icons/EmailIcon.astro'
import FacebookIcon from '@/components/icons/FacebookIcon.astro'
import InstagramIcon from '@/components/icons/InstagramIcon.astro'
import MapIcon from '@/components/icons/MapIcon.astro'
import WhatsappIcon from '@/components/icons/WhatsappIcon.astro'
import Map from '@/components/Map.astro'
---

<section
  id="contact"
  class="w-full px-4 md:px-6 py-12 md:py-16 flex flex-col items-center"
>
  <div class="flex flex-col items-center mb-8 md:mb-12 w-full max-w-4xl gap-4">
    <h2
      class="text-2xl sm:text-3xl md:text-5xl font-bold text-white text-center"
    >
      ¡Únete a Gudas Studio!
    </h2>
    <p
      class="text-white/90 text-center text-base md:text-lg px-4 leading-relaxed"
    >
      Comienza tu transformación artística hoy. Contáctanos para más información
      sobre nuestras clases y horarios.
    </p>
  </div>

  <div
    class="flex flex-col lg:flex-row gap-8 md:gap-12 w-full max-w-6xl mt-6 md:mt-10"
  >
    <!-- Card de contacto -->
    <div
      class="flex-1 flex flex-col gap-6 md:gap-8 bg-background/80 backdrop-blur-lg border border-primary/30 rounded-2xl shadow-2xl p-6 md:p-8"
    >
      <h2
        class="text-2xl md:text-3xl lg:text-4xl font-extrabold text-white mb-2 md:mb-4 tracking-tight drop-shadow-lg text-center lg:text-left"
      >
        Contáctanos
      </h2>
      <div class="flex flex-col gap-4 md:gap-5 text-base md:text-lg">
        <a
          href="#"
          class="flex items-center gap-3 md:gap-4 bg-primary/20 border border-primary/30 rounded-xl px-4 py-4 shadow-lg group hover:-translate-y-1 hover:bg-primary/30 transition-all duration-200 active:scale-95"
        >
          <span
            class="flex items-center justify-center w-10 h-10 md:w-12 md:h-12 rounded-xl bg-primary/30 flex-shrink-0"
            ><MapIcon class="w-5 h-5 md:w-7 md:h-7 text-primary" /></span
          >
          <div class="flex-1 min-w-0">
            <strong class="block text-primary text-sm md:text-base"
              >Dirección</strong
            >
            <span class="text-white/80 text-sm md:text-base break-words"
              >Atlixco, Puebla, México</span
            >
          </div>
        </a>
        <a
          href="https://wa.me/521234567890"
          target="_blank"
          rel="noopener"
          class="flex items-center gap-3 md:gap-4 bg-primary/20 border border-primary/30 rounded-xl px-4 py-4 shadow-lg group hover:-translate-y-1 hover:bg-whatsapp/20 transition-all duration-200 active:scale-95"
        >
          <span
            class="flex items-center justify-center w-10 h-10 md:w-12 md:h-12 rounded-xl bg-whatsapp/30 flex-shrink-0"
            ><WhatsappIcon class="w-5 h-5 md:w-7 md:h-7 text-whatsapp" /></span
          >
          <div class="flex-1 min-w-0">
            <strong class="block text-support-2 text-sm md:text-base"
              >Teléfono</strong
            >
            <span class="text-white/80 text-sm md:text-base"
              >(222) 123-4567</span
            >
          </div>
        </a>
        <a
          href="mailto:contacto@gudastudio.com"
          class="flex items-center gap-3 md:gap-4 bg-primary/20 border border-primary/30 rounded-xl px-4 py-4 shadow-lg group hover:-translate-y-1 hover:bg-emphasis/20 transition-all duration-200 active:scale-95"
        >
          <span
            class="flex items-center justify-center w-10 h-10 md:w-12 md:h-12 rounded-xl bg-emphasis/30 flex-shrink-0"
            ><EmailIcon class="w-5 h-5 md:w-7 md:h-7 text-emphasis" /></span
          >
          <div class="flex-1 min-w-0">
            <strong class="block text-emphasis text-sm md:text-base"
              >Email</strong
            >
            <span class="text-white/80 text-sm md:text-base break-all"
              >contacto@gudastudio.com</span
            >
          </div>
        </a>
      </div>

      <div class="mt-6 md:mt-8">
        <p
          class="text-lg md:text-xl text-white font-bold mb-4 tracking-wide text-center lg:text-left"
        >
          Síguenos en nuestras redes sociales
        </p>
        <div class="flex flex-col sm:flex-row gap-3 md:gap-4">
          <a
            href="#"
            target="_blank"
            rel="noopener"
            class="flex-1 text-white bg-gradient-to-tr from-facebook to-facebook-2 px-4 md:px-6 py-3 md:py-4 flex items-center justify-center gap-2 text-base md:text-lg font-semibold rounded-xl shadow-lg hover:scale-105 hover:from-facebook-2 hover:to-facebook active:scale-95 transition-all duration-200 min-h-[44px]"
          >
            <FacebookIcon class="size-6 md:size-8 text-white flex-shrink-0" />
            <span>Facebook</span>
          </a>
          <a
            href="#"
            target="_blank"
            rel="noopener"
            class="flex-1 text-white bg-gradient-to-tr from-instagram via-instagram-3 to-instagram-2 px-4 md:px-6 py-3 md:py-4 rounded-xl font-semibold flex items-center justify-center gap-2 shadow-lg hover:scale-105 hover:from-instagram-2 hover:to-instagram active:scale-95 transition-all duration-200 text-base md:text-lg min-h-[44px]"
          >
            <InstagramIcon class="size-6 md:size-8 text-white flex-shrink-0" />
            <span>Instagram</span>
          </a>
        </div>
      </div>
    </div>
    <!-- Mapa -->
    <div
      class="flex-1 w-full min-h-[300px] md:min-h-[350px] lg:min-h-[400px] flex items-center"
    >
      <Map />
    </div>
  </div>
</section>
