---
import TitleSection from "@/components/TitleSection.astro";

interface Clase {
  name: string;
  subname: string;
  description: string;
  image: string;
  level?: string;
  duration?: string;
  schedule?: string;
  price?: string;
}

const { clases } = Astro.props;
---

<section class="w-full py-16 px-4 md:px-8">
  <div class="max-w-6xl mx-auto flex flex-col items-center">
    <TitleSection title="Explora Nuestras Clases">
        Cada clase está diseñada para desarrollar tu potencial artístico y físico.
        Elige la que mejor se adapte a tus objetivos y nivel de experiencia.
    </TitleSection>

    <div
      class="grid gap-8 grid-cols-1 md:grid-cols-2 lg:grid-cols-3"
    >
      {
        clases.map((clase: Clase, idx: number) => (
          <div
            class={`class-card relative bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 group
            ${idx === 0 ? "lg:col-span-2 lg:row-span-1" : ""}
            ${idx === 3 ? "lg:col-span-2" : ""}
          `}
          >
            <!-- Imagen de fondo -->
            <div class="relative h-64 overflow-hidden">
              <img
                src={clase.image}
                alt={clase.name}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent"></div>

              <!-- Badge de nivel -->
              <div class="absolute top-4 left-4">
                <span class="inline-block border backdrop-blur-xl text-white px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wide ">
                  {clase.level || "Todos los niveles"}
                </span>
              </div>

              <!-- Título superpuesto -->
              <div class="absolute bottom-4 left-4 right-4">
                <h3 class="text-2xl font-bold text-white mb-1 drop-shadow-lg">
                  {clase.name}
                </h3>
                <p class="text-white/90 text-sm font-medium">
                  {clase.subname}
                </p>
              </div>
            </div>

            <!-- Contenido de la card -->
            <div class="p-6">
              <!-- Descripción -->
              <p class="text-gray-600 text-sm leading-relaxed mb-4">
                {clase.description}
              </p>

              <!-- Información adicional -->
              <div class="space-y-3 mb-6">
                {clase.duration && (
                  <div class="flex items-center gap-2 text-sm text-gray-700">
                    <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                    </svg>
                    <span class="font-medium">Duración:</span>
                    <span>{clase.duration}</span>
                  </div>
                )}

                {clase.schedule && (
                  <div class="flex items-center gap-2 text-sm text-gray-700">
                    <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                    </svg>
                    <span class="font-medium">Horario:</span>
                    <span>{clase.schedule}</span>
                  </div>
                )}

                {clase.price && (
                  <div class="flex items-center gap-2 text-sm text-gray-700">
                    <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z" />
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd" />
                    </svg>
                    <span class="font-medium">Precio:</span>
                    <span class="text-primary font-bold">{clase.price}</span>
                  </div>
                )}
              </div>

              <!-- Botones de acción -->
              <div class="flex gap-3">
                <a
                  href="/contact"
                  class="flex-1  text-center py-3 px-4 rounded-xl font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
                >
                  Reservar Clase
                </a>
                <button
                  class="bg-gray-100 hover:bg-gray-200 text-gray-700 p-3 rounded-xl transition-all duration-300 hover:scale-105"
                  title="Más información"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                  </svg>
                </button>
              </div>
            </div>

            <!-- Efecto hover decorativo -->
            <div class="absolute inset-0 border-2 border-transparent group-hover:border-primary/40 rounded-2xl transition-all duration-300 pointer-events-none"></div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .class-card {
    will-change: transform;
    backface-visibility: hidden;
    perspective: 1000px;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .class-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }

  /* Animación de imagen en hover */
  .class-card img {
    transition: transform 0.7s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .class-card:hover img {
    transform: scale(1.1);
  }

  /* Gradiente animado para los botones */
  .class-card a[href="/contact"] {
    background: linear-gradient(135deg, #0a6e70, #129396);
    background-size: 200% 200%;
    animation: gradientShift 3s ease infinite;
  }

  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  /* Efectos para dispositivos táctiles */
  @media (hover: none) and (pointer: coarse) {
    .class-card:hover {
      transform: none;
    }

    .class-card:active {
      transform: translateY(-4px);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .class-card {
      margin-bottom: 1rem;
    }
  }

  /* Mejoras de accesibilidad */
  .class-card:focus-within {
    outline: 2px solid #0a6e70;
    outline-offset: 2px;
  }

  /* Animación sutil para elementos internos */
  .class-card .space-y-3 > div {
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .class-card:hover .space-y-3 > div {
    opacity: 1;
  }
</style>
