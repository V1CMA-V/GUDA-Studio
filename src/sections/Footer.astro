---
import FacebookIcon from "@/components/icons/FacebookIcon.astro";
import WhatsappIcon from "@/components/icons/WhatsappIcon.astro";
---

<footer
  class="bg-gradient-to-br from-violet-100 via-white to-blue-100 border-t border-gray-200 px-4 py-20"
>
  <div
    class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-8"
  >
    <!-- Derechos reservados -->
    <div
      class="flex-1 flex flex-col items-center md:items-start text-center md:text-left gap-2"
    >
      <span class="text-2xl font-bold text-primary tracking-tight"
        >Guda Studio</span
      >
      <p class="text-gray-500 text-sm">
        &copy; {new Date().getFullYear()} Todos los derechos reservados.
      </p>
    </div>

    <!-- Navegación -->
    <div class="flex-1 flex flex-col items-center gap-4">
      <h3 class="text-lg font-semibold text-primary mb-1">Navegación</h3>
      <ul class="flex flex-wrap justify-center gap-3 text-gray-600">
        <li>
          <a href="/" class="hover:text-primary transition-colors">Inicio</a>
        </li>
        <li>
          <a href="/about" class="hover:text-primary transition-colors"
            >Sobre Nosotros</a
          >
        </li>
        <li>
          <a href="/classes" class="hover:text-primary transition-colors"
            >Clases</a
          >
        </li>
        <li>
          <a href="/shop" class="hover:text-primary transition-colors">Tienda</a
          >
        </li>
        <li>
          <a href="#contact" class="hover:text-primary transition-colors"
            >Contacto</a
          >
        </li>
      </ul>
    </div>

    <!-- Contacto -->
    <div class="flex-1 flex flex-col items-center md:items-end gap-4">
      <h3 class="text-lg font-semibold text-center text-green-700 mb-1">
        Contacto
      </h3>
      <ul class="flex gap-4">
        <li>
          <a
            href="#"
            class="flex items-center gap-1 hover:text-blue-600 transition-colors"
          >
            <FacebookIcon class="w-5 h-5" />
            Facebook
          </a>
        </li>
        <li>
          <a
            href="#"
            class="flex items-center gap-1 hover:text-green-600 transition-colors"
          >
            <WhatsappIcon class="w-5 h-5" />
            Whatsapp
          </a>
        </li>
      </ul>
    </div>
  </div>
</footer>
