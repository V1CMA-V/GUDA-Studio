---
interface Props {
  title: string
}

const { title } = Astro.props
---

<div class="flex flex-col items-center mb-15 w-fit gap-3">
  <h2 class="text-3xl uppercase md:text-5xl font-bold">{title}</h2>
  <!-- Description -->
  <p class="text-lg md:text-xl w-3/4 text-pretty tracking-wide text-center">
    <slot />
  </p>
</div>
