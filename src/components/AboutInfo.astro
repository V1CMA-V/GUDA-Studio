<section
  class="relative flex flex-col-reverse md:flex-row items-center justify-center w-full bg-black/90 overflow-hidden max-h-[80vh]"
  aria-labelledby="section-title"
>
  <!-- Imagen con overlay -->
  <div
    id="about-img"
    class="flex-1 w-full h-48 xs:h-56 sm:h-64 md:h-full relative overflow-hidden"
  >
    <img
      src="https://images.unsplash.com/photo-1506748686214-e9df14d4d9d0?q=80&w=2072&auto=format&fit=crop"
      alt="Grupo de danza en Puebla"
      class="w-full h-full object-cover brightness-75 md:rounded-l-3xl transition-all duration-500 hover:scale-105 hover:saturate-150 hover:brightness-100"
      loading="lazy"
    />
    <div
      class="absolute inset-0 bg-gradient-to-t md:bg-gradient-to-l from-black/60 to-transparent pointer-events-none"
      aria-hidden="true"
    >
    </div>
  </div>

  <!-- Información -->
  <div
    class="flex-1 px-4 py-8 sm:px-6 sm:py-10 md:px-16 md:py-20 flex flex-col justify-center items-center gap-6 sm:gap-8 z-10 text-center"
  >
    <h2
      id="section-title"
      class="text-2xl sm:text-3xl md:text-5xl lg:text-7xl font-bold text-white drop-shadow-lg tracking-tight"
      aria-label="La mejor experiencia en danza en Puebla para todos los niveles"
    >
      La mejor experiencia en danza en
      <span class="text-primary">Puebla</span> para todos los niveles
    </h2>

    <p
      class="text-base sm:text-lg md:text-2xl text-secondary max-w-xs sm:max-w-xl"
    >
      ¡Descubre tu pasión por la danza en un ambiente profesional, inclusivo y
      divertido!
    </p>

    <a
      href="#contact"
      role="button"
      class="inline-block px-6 py-4 sm:px-8 sm:py-5 bg-primary text-white text-lg sm:text-2xl md:text-3xl font-bold rounded-xl shadow-lg hover:scale-105 hover:bg-primary/90 focus:outline-none focus:ring-4 focus:ring-primary/40 transition-transform duration-300"
    >
      ¡Únete a GUDAS!
      <span class="block text-xs sm:text-base font-medium mt-1">
        Obtén 3 clases en promoción
      </span>
    </a>

    <p class="text-xs sm:text-sm text-secondary/80">
      * Válido para nuevos estudiantes
    </p>
  </div>
</section>

<script>
  import gsap from 'gsap'
  import { ScrollTrigger } from 'gsap/ScrollTrigger'
  gsap.registerPlugin(ScrollTrigger)

  // Animación de entrada
  gsap.from('#about-img img', {
    opacity: 0,
    x: -50,
    scale: 1.2,
    duration: 1,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '#about-img img',
      start: 'top 80%',
      scrub: 1,

      toggleActions: 'play none none reverse',
    },
  })

  // Animación de texto
  gsap.from('.text-2xl, .text-base', {
    opacity: 0,
    x: 50,
    duration: 1,
    ease: 'power2.out',
    stagger: 0.2,
    scrollTrigger: {
      scrub: 1,

      trigger: '.text-2xl, .text-base',
      start: 'top 80%',
      toggleActions: 'play none none reverse',
    },
  })
</script>
