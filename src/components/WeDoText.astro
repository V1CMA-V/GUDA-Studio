---
interface Props {
  title: string
}

const { title } = Astro.props as Props
---

<div class="we-do-text w-full flex flex-col items-center md:items-start gap-4">
  <h4 class="we-do-title text-2xl font-semibold text-primary relative">
    {title}
    <span class="we-do-underline"></span>
  </h4>
  <p
    class="text-lg md:text-xl max-w-2xl text-center md:text-left text-secondary leading-relaxed border-b-2 border-secondary/30 pb-4 mb-4"
  >
    <slot />
  </p>
</div>

<style>
  .we-do-text {
    animation: fadeInUp 1s cubic-bezier(0.4, 0, 0.2, 1) both;
    animation-timeline: view();
    animation-range: entry 40% cover 80%;
  }

  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(40px);
      filter: blur(8px);
    }

    60% {
      opacity: 1;
      transform: translateY(-4px);
      filter: blur(0);
    }

    100% {
      opacity: 1;
      transform: translateY(0);
      filter: blur(0);
    }
  }

  .we-do-title {
    display: inline-block;
    padding-bottom: 0.2em;
  }

  .we-do-underline {
    display: block;
    position: absolute;
    left: 0;
    bottom: 0;
    width: 2.5em;
    height: 0.18em;
    background: linear-gradient(
      90deg,
      var(--color-primary),
      var(--color-secondary, #a0aec0)
    );
    border-radius: 1em;
    opacity: 0.25;
    z-index: 0;
    transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .we-do-title:hover .we-do-underline {
    width: 100%;
    opacity: 0.5;
  }

  @media (max-width: 768px) {
    .we-do-title {
      font-size: 1.25rem;
    }

    .we-do-underline {
      width: 1.5em;
      height: 0.12em;
    }
  }
</style>
