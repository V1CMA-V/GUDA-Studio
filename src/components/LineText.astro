---
interface Props {
  side: 'left' | 'right'
}

const { side } = Astro.props as Props

const rotate = side === 'left' ? 'rotate-180' : ''
---

<div id="page2" class="w-full overflow-x-hidden">
  <div
    class="move bg-green-500 flex gap-4 sm:gap-6 md:gap-10 px-2 sm:px-6 md:px-10 min-w-max"
  >
    {
      Array.from({ length: 7 }).map((_, i) => (
        <div
          class={`${side} flex items-center gap-2 sm:gap-4 md:gap-5 py-1 sm:py-2`}
        >
          <h1 class="uppercase text-3xl sm:text-5xl md:text-7xl whitespace-nowrap">
            merch
          </h1>
          <img
            src="https://www.brandium.nl/wp-content/uploads/2023/07/arrow-br.svg"
            alt=""
            class={rotate}
            style="width:2.5rem;height:2.5rem;min-width:2.5rem;min-height:2.5rem;max-width:2.5rem;max-height:2.5rem;object-fit:cover;"
            srcset="https://www.brandium.nl/wp-content/uploads/2023/07/arrow-br.svg 1x, https://www.brandium.nl/wp-content/uploads/2023/07/arrow-br.svg 2x"
          />
        </div>
      ))
    }
  </div>
</div>

<style>
  .right {
    flex-shrink: 0;
  }
  @media (min-width: 640px) {
    img[alt=''] {
      width: 3rem !important;
      height: 3rem !important;
      min-width: 3rem !important;
      min-height: 3rem !important;
      max-width: 3rem !important;
      max-height: 3rem !important;
    }
  }
  @media (min-width: 768px) {
    img[alt=''] {
      width: 4rem !important;
      height: 4rem !important;
      min-width: 4rem !important;
      min-height: 4rem !important;
      max-width: 4rem !important;
      max-height: 4rem !important;
    }
  }
</style>

<script>
  import gsap from 'gsap'

  gsap.from('.right', {
    transform: 'translateX(-113%)',
    duration: 2,
    repeat: -1,
    ease: 'none',
  })

  gsap.to('.left', {
    transform: 'translateX(-113%)',
    duration: 2,
    repeat: -1,
    ease: 'none',
  })
</script>
