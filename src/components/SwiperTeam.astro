---
import { Team } from 'data.json'
---

<div class="col-span-10 md:col-span-5">
  <div
    class="swiper swiper-team w-full h-full rounded-3xl overflow-hidden shadow-2xl bg-transparent"
  >
    <div class="swiper-wrapper">
      {
        Team.map((member) => (
          <div class="swiper-slide group flex flex-col items-center justify-end relative h-full">
            <div class="absolute inset-0 w-full h-full z-0">
              <img
                src={`/images/about/${member.image}`}
                alt={`Foto de ${member.name}`}
                class="w-full h-full object-cover object-center scale-100 group-hover:scale-105 transition-transform duration-700 ease-in-out rounded-3xl shadow-lg shadow-black/30"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent rounded-3xl" />
              <div class="absolute top-4 right-4 bg-white/10 text-white text-xs px-3 py-1 rounded-full backdrop-blur-md border border-white/20 shadow">
                Instructor
              </div>
            </div>
            <div class="relative z-10 w-full p-8 flex flex-col items-center justify-end gap-2">
              <h4 class="font-extrabold text-2xl md:text-3xl text-white drop-shadow-lg tracking-wide text-center">
                {member.name}
              </h4>
              <p class="text-base md:text-lg font-light text-white/80 drop-shadow text-center">
                {member.styles.join(', ')}
              </p>
            </div>
          </div>
        ))
      }
    </div>
    <div class="swiper-pagination !bottom-2"></div>
  </div>
</div>
